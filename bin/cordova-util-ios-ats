#!/usr/bin/env node

var command = process.argv.length > 2 ? process.argv[2] : 'remove';
var projectPath = process.argv.length > 3 ? process.argv[3] : '.';

var editATS = require('../index');

if (["create","remove","rm"].includes(command)) {
  editATS(command, projectPath);
} else {
  console.error("Usage: `npx cordova-util-ios-ats create` or `npx cordova-util-ios-ats remove`.");
}
